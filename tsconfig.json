{
  "compilerOptions": {
      "target": "ESNext",
      "module": "ES6",
      "moduleResolution": "Node",
      "rootDir": "src",
      "allowJs": false,
      "outDir": "dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "declaration": true
  },
  "ts-node": {
      "esm": true
  }
}
